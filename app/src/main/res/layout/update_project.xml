<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

    <RelativeLayout
        android:id="@+id/rlHeaderContainer"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg">
        <TextView
            android:id="@+id/tvHeaderDescription"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Quản lý các dự án của công ty"
            android:layout_alignStart="@+id/tvHeaderTitle"
            android:layout_below="@+id/tvHeaderTitle"
            android:layout_marginTop="10dp"
            android:textColor="#545454"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Dự án"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/rlHeaderContainer"
        android:layout_alignEnd="@id/rlHeaderContainer"
        app:srcCompat="@drawable/project" />

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật dự án mới"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/rlHeaderContainer"
        android:layout_alignStart="@+id/rlHeaderContainer" />

    <RelativeLayout
        android:id="@+id/inputContainer"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabel"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_background">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputUpdateProjectID"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:cursorColor="#000000"
            app:hintEnabled="false"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="#020202"
                android:textColorLink="#070707"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="257dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/labelUpdateIdProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/inputUpdateProjectID"
            android:background="@color/white"
            android:text="Mã dự án"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputUpdateProjectName"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputUpdateProjectID"
            android:layout_marginTop="-15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:cursorColor="#000000"
            app:hintEnabled="false"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="#020202"
                android:textColorLink="#070707"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="353dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/labelUpdateProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/inputUpdateProjectName"
            android:background="@color/white"
            android:text="Tên dự án"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputUpdateProjectParticipant"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputUpdateProjectName"
            android:layout_marginTop="-15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:cursorColor="#000000"
            app:hintEnabled="false"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="#020202"
                android:textColorLink="#070707"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="353dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/labelUpdateProjectParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@+id/inputUpdateProjectParticipant"
            android:background="@color/white"
            android:text="Tên tham gia"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputUpdateProjectDesc"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputUpdateProjectParticipant"
            android:layout_marginTop="-15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:cursorColor="#000000"
            app:hintEnabled="false"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textColor="@color/black"
                android:textColorHint="#020202"
                android:textColorLink="#070707"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="353dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/labelUpdateProjectDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@+id/inputUpdateProjectDesc"
            android:background="@color/white"
            android:text="Mô tả"
            android:textColor="@color/black" />


    </RelativeLayout>

    <Button
        android:id="@+id/buttonUpdateProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#5C63D6"
        android:paddingVertical="12dp"
        android:text="Cập nhật dự án"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:cornerRadius="5dp" />


</RelativeLayout>
