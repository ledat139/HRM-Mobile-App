<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input for Project ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Mã dự án"
            android:gravity="start"
            android:paddingEnd="8dp"/>
        <EditText
            android:id="@+id/inputSearchProjectID"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Nhập mã dự án" />
    </LinearLayout>

    <!-- Input for Project Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Tên dự án"
            android:gravity="start"
            android:paddingEnd="8dp"/>
        <EditText
            android:id="@+id/inputSearchProjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Nhập tên dự án" />
    </LinearLayout>

    <!-- Input for Start Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu"
            android:gravity="start"
            android:paddingEnd="8dp"/>
        <EditText
            android:id="@+id/inputSearchStartingDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Chọn ngày bắt đầu"
            android:focusable="false" />
    </LinearLayout>

    <!-- Input for End Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Ngày kết thúc"
            android:gravity="start"
            android:paddingEnd="8dp"/>
        <EditText
            android:id="@+id/inputSearchEndingDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Chọn ngày kết thúc"
            android:focusable="false" />
    </LinearLayout>

    <!-- Input for Department ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Mã phòng ban"
            android:gravity="start"
            android:paddingEnd="8dp"/>
        <Spinner
            android:id="@+id/inputSearchProjectDepartmentID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>

    <!-- Input for Project Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:gravity="start"
            android:paddingEnd="8dp"/>
        <Spinner
            android:id="@+id/inputSearchProjectStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/buttonCancelSearchProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:text="Huỷ"
            android:textColor="@color/white"
            android:backgroundTint="#b3b3b3"
            android:layout_marginEnd="10dp"
            app:cornerRadius="5dp" />
        <Button
            android:id="@+id/buttonSearchProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#5C63D6"
            android:paddingVertical="15dp"
            android:text="Tìm kiếm dự án"
            android:textColor="@color/white"
            app:cornerRadius="5dp" />
    </LinearLayout>

</LinearLayout>
