<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/projectContainerInformation"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/item_account"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/tvProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Phát triển web TENPM"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/ivProjectDetail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivProjectDelete"
        android:src="@drawable/account_detail" />

    <TextView
        android:id="@+id/tvProjectDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProjectName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="Phòng ban: IT"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tvProjectStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/tvProjectDepartment"
        android:layout_marginTop="15dp"
        android:background="@drawable/manager_type_shape"
        android:text="Chưa hoàn thành"
        android:textColor="#F47271"/>

    <ImageView
        android:id="@+id/ivProjectDelete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@id/tvProjectStatus"
        android:layout_toStartOf="@id/ivProjectDetail"
        android:src="@android:drawable/ic_menu_delete" />
</RelativeLayout>
